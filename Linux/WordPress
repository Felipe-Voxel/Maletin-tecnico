#versión de PHP
php -v

#versión de PHP que está usando el Apache
ls /etc/apache2/mods-enabled/ | grep php

#cambiar versión de PHP que utiliza el Apache
sudo a2dismod php7.4
sudo a2enmod php8.2
sudo systemctl restart apache2
sudo apachectl configtest

#Ver qué módulos de PHP están instalados
dpkg -l | grep php7.4
dpkg -l | grep php8.2

#Instalar módulo de PHP para manipulación de imágenes
apt install php7.4-imagick
